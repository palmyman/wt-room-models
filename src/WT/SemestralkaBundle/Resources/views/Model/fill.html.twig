{% if refactoredSeatsSteps %}
    <h2>Steps</h2>
    {% for step in refactoredSeatsSteps %}
        <table class="model">
            <thead>
                <tr>
                    <th></th>
                    {% for col in step.1 %}
                        <th>{{ col.col }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>        
                {% for row in step %}
                <tr>
                    <th>{{ row.1.row }}</th>            
                    {% for col in row %}
                        <td class="{{ col.class }}">
                            {% if col.order %}
                                {{ col.order }}
                            {% else %}
                                {{ col.price }}
                            {% endif %}
                        </td>
                    {% endfor %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endfor %}
{% endif %}
{% endblock content %}