{% extends 'WTSemestralkaBundle::layout.html.twig' %}
{% block content %}
<h1>{% block title %}Filling model{% endblock title %}</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ model.id }}</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ model.author }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ model.description }}</td>
        </tr>
        <tr>
            <th>Available seats</th>
            <td>{{ model.capacity }}</td>
        </tr>
        <tr>
            <th>Room</th>
            <td>{{ model.room.name }}</td>
        </tr>
    </tbody>
</table>

<h2>Output</h2>
<table class="model">
    <thead>
        <tr>
            <th></th>
            {% for col in refactoredSeats.1 %}
                <th>{{ col.col }}</th>
            {% endfor %}
        </tr>
    </thead>
    <tbody>        
        {% for row in refactoredSeats %}
        <tr>
            <th>{{ row.1.row }}</th>            
            {% for col in row %}
                <td class="{{ col.class }}">
                    {% if col.order %}
                        {{ col.order }}
                    {% else %}
                        {{ col.price }}
                    {% endif %}
                </td>
            {% endfor %}
        </tr>
        {% endfor %}
    </tbody>
</table>

<form action="#" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Fill</button>
    </p>
</form>
{% if error %}
    <div>{{error}}</div>
{% endif %}

