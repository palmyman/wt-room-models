{% extends 'WTSemestralkaBundle::layout.html.twig' %}
{% block content %}
<h1>{% block title %}Room list{% endblock title %}</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Name</th>
            <th>Rows</th>
            <th>Cols</th>
            <th>MaxCapacity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.name }}</td>
            <td>{{ entity.rows }}</td>
            <td>{{ entity.cols }}</td>
            <td>{{ entity.capacity }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('room_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('room_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock content %}